<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EisenhowerMatrixFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- (0,0) Do First -->
            <LinearLayout
                android:id="@+id/block_do_first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#FFEFEF">

                <TextView
                    android:id="@+id/title_do_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do First"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="4dp" />

                <Button
                    android:id="@+id/btn_add_do_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add task" />

                <!-- Container where task rows will live -->
                <LinearLayout
                    android:id="@+id/container_do_first_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <!-- Example initial task row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <CheckBox
                            android:id="@+id/chk_do_first_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_do_first_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sample task"
                            android:paddingHorizontal="4dp" />

                        <ImageButton
                            android:id="@+id/btn_play_do_first_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_play"   <!-- your play icon -->
                        android:contentDescription="Play"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/block_schedule"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#EFF7FF">

                <TextView
                    android:id="@+id/title_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="4dp" />

                <Button
                    android:id="@+id/btn_add_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add task" />

                <LinearLayout
                    android:id="@+id/container_schedule_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <CheckBox
                            android:id="@+id/chk_schedule_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_schedule_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sample task"
                            android:paddingHorizontal="4dp" />

                        <ImageButton
                            android:id="@+id/btn_play_schedule_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_play"
                            android:contentDescription="Play"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/block_delegate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#F5FFE8">

                <TextView
                    android:id="@+id/title_delegate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delegate"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="4dp" />

                <Button
                    android:id="@+id/btn_add_delegate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add task" />

                <LinearLayout
                    android:id="@+id/container_delegate_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <CheckBox
                            android:id="@+id/chk_delegate_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_delegate_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sample task"
                            android:paddingHorizontal="4dp" />

                        <ImageButton
                            android:id="@+id/btn_play_delegate_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_play"
                            android:contentDescription="Play"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/block_eliminate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#FFF3E8">

                <TextView
                    android:id="@+id/title_eliminate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminate"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="4dp" />

                <Button
                    android:id="@+id/btn_add_eliminate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add task" />

                <LinearLayout
                    android:id="@+id/container_eliminate_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <CheckBox
                            android:id="@+id/chk_eliminate_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_eliminate_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sample task"
                            android:paddingHorizontal="4dp" />

                        <ImageButton
                            android:id="@+id/btn_play_eliminate_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_play"
                            android:contentDescription="Play"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
